<div id="outer">
<span id="title">New Habit Here</span>
<%= form_with scope: :habit, url: habits_path, local: true do |form| %>
  <p>
    <%= form.label :'Your New Habit'%><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :'Goal streak length'%><br>
    <%= form.number_field :days %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to '< Back', habits_path %>
</div>
